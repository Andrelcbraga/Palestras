@model Palestras.Models.Palestrante

<div class="card">
    <div class="card-header">
        @*<h5 class="text-uppercase">Palestrante - Detalhes</h5>*@
        <h5> Palestrante - Detalhes</h5>
    </div>
    <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Foto" class="control-label"></label>
                        <div class="custom-file">
                            <input asp-for="Foto" class="custom-file-input" />
                            <label class="custom-file-label" for="customFile">Escolha a Foto</label>
                        </div>
                        <span asp-validation-for="Foto" class="text-danger"></span>
                        <img src="~/Uploads/@Model.Foto" class="img-thumbnail" height="80" width="80" asp-append-version="true" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Qualificacao" class="control-label"></label>
                        <input asp-for="Qualificacao" class="form-control" />
                        <span asp-validation-for="Qualificacao" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Experiencia" class="control-label"></label>
                        <input asp-for="Experiencia" class="form-control" />
                        <span asp-validation-for="Experiencia" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="DataPalestra" class="control-label"></label>
                        <input asp-for="DataPalestra" class="form-control" />
                        <span asp-validation-for="DataPalestra" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="HoraPalestra" class="control-label"></label>
                        <input asp-for="HoraPalestra" class="form-control" />
                        <span asp-validation-for="HoraPalestra" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Local" class="control-label"></label>
                        <textarea asp-for="Local" class="form-control"></textarea>
                        <span asp-validation-for="Local" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-info"><i class="fa fa-pencil-alt"></i> Editar</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger"><i class="fa fa-trash-alt"></i>Excluir</a>
                <a asp-action="Index" class="btn btn-sm btn-primary"><i class="fas fa-fast-backward"></i> Voltar</a>
            </div>
    </div>
</div>
