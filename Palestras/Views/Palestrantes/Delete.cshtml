@model Palestras.ViewModels.PalestranteViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<h3>Confirma exclusão deste palestrante ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Qualificacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Qualificacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Experiencia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Experiencia)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataPalestra)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataPalestra)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HoraPalestra)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoraPalestra)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Local)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Local)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PalestranteFoto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PalestranteFoto)
        </dd>
        <dd class="col-sm-10">
            <img src="~/Uploads/@Model.ImagemExistente" class="img-thumbnail" height="100" width="100" asp-append-version="true" />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-sm btn-danger rounded-0"><i class="fa fa-trash-alt"></i> Deletar</button>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-info rounded-0"><i class="fa fa-pencil-alt"></i> Editar</a>
        <a asp-action="Index" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-fast-backward"></i> Retornar</a>
    </form>
</div>
