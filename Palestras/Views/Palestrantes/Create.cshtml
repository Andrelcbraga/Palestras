@model Palestras.ViewModels.PalestranteViewModel

<div class="card">
    <div class="card-header">
        <h5 class="text-uppercase">Novo Palestrante</h5>
    </div>
    <div class="card-body">
        <form asp-action="Create" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="PalestranteFoto" class="control-label"></label>
                        <div class="custom-file">
                            <input asp-for="PalestranteFoto" class="custom-file-input" />
                            <label class="custom-file-label" for="customFile">Escolha A Foto</label>
                        </div>
                        <span asp-validation-for="PalestranteFoto" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Qualificacao" class="control-label"></label>
                        <input asp-for="Qualificacao" class="form-control" />
                        <span asp-validation-for="Qualificacao" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Experiencia" class="control-label"></label>
                        <input asp-for="Experiencia" class="form-control" />
                        <span asp-validation-for="Experiencia" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="DataPalestra" class="control-label"></label>
                        <input asp-for="DataPalestra" class="form-control" />
                        <span asp-validation-for="DataPalestra" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="HoraPalestra" class="control-label"></label>
                        <input asp-for="HoraPalestra" class="form-control" />
                        <span asp-validation-for="HoraPalestra" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Local" class="control-label"></label>
                        <textarea asp-for="Local" class="form-control"></textarea>
                        <span asp-validation-for="Local" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-sm btn-primary rounded-0" />
                <a asp-action="Index" class="btn btn-sm btn-primary rounded-0">Retornar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}